# Render configuration using Docker instead of native Python
services:
  - type: web
    name: cryptouniverse-backend-docker
    runtime: docker
    plan: starter
    region: oregon
    dockerfilePath: ./Dockerfile.render
    envVars:
      - key: PORT
        value: 10000
      - key: ENVIRONMENT
        value: production
    healthCheckPath: /health
    autoDeploy: true
