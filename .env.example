# ==========================================
# CryptoUniverse Enterprise Configuration
# ==========================================

# Application Settings
APP_NAME="CryptoUniverse Enterprise"
APP_VERSION="2.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production"
ENCRYPTION_KEY="your-encryption-key-for-api-keys-32-chars"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/cryptouniverse"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_MAX_CONNECTIONS=100

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, text
SENTRY_DSN=""  # Optional: Sentry for error tracking

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
ALLOWED_HOSTS="localhost,127.0.0.1"

# ==========================================
# Exchange API Keys (Per System - Admin)
# ==========================================
# Note: Users will set their own API keys via the UI
# These are fallback/system keys for market data

# Binance (Optional - for system-wide market data)
BINANCE_API_KEY=""
BINANCE_SECRET_KEY=""

# Kraken (Optional)
KRAKEN_API_KEY=""
KRAKEN_SECRET_KEY=""

# KuCoin (Optional)
KUCOIN_API_KEY=""
KUCOIN_SECRET_KEY=""
KUCOIN_PASSPHRASE=""

# ==========================================
# AI Services Configuration
# ==========================================

# OpenAI
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=4000

# Claude (Anthropic)
CLAUDE_API_KEY=""
CLAUDE_MODEL="claude-3-5-sonnet-latest"

# Gemini (Google)
GEMINI_API_KEY=""
GEMINI_MODEL="gemini-pro"

# ==========================================
# Market Data APIs (Free Tier)
# ==========================================

# CoinGecko (Free tier: 50 calls/minute)
COINGECKO_API_KEY=""  # Optional for higher limits

# CoinCap (Free tier: 100 calls/minute)
COINCAP_API_KEY=""  # Optional

# ==========================================
# Supabase Integration (Optional)
# ==========================================

SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# ==========================================
# Payment Processing
# ==========================================

# Stripe
STRIPE_PUBLIC_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ==========================================
# Email & Notifications
# ==========================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=""
TELEGRAM_ADMIN_CHAT_ID=""

# ==========================================
# Trading Configuration
# ==========================================

# Default Trading Settings
DEFAULT_SIMULATION_MODE=true
DEFAULT_CREDIT_BALANCE=100
CREDIT_COST_PER_DOLLAR=0.10  # $0.10 per credit = $1 profit potential

# Risk Management
MAX_DAILY_LOSS_PCT=10.0
MAX_POSITION_SIZE_PCT=20.0
EMERGENCY_STOP_LOSS_PCT=15.0

# Rate Limiting (Conservative to avoid bans)
BINANCE_RATE_LIMIT=1200  # per minute
KRAKEN_RATE_LIMIT=60     # per minute
KUCOIN_RATE_LIMIT=100    # per 10 seconds

# ==========================================
# Background Services Configuration
# ==========================================

# Service Intervals (seconds)
HEALTH_MONITOR_INTERVAL=60
METRICS_COLLECTOR_INTERVAL=300
CLEANUP_SERVICE_INTERVAL=3600
AUTONOMOUS_CYCLES_INTERVAL=900
MARKET_DATA_SYNC_INTERVAL=60
BALANCE_SYNC_INTERVAL=300
RISK_MONITOR_INTERVAL=30
RATE_LIMIT_CLEANUP_INTERVAL=1800

# Market Data Symbols
MARKET_DATA_SYMBOLS="BTC,ETH,SOL,ADA,DOT,MATIC,LINK,UNI,AVAX,ATOM"

# ==========================================
# Performance & Monitoring
# ==========================================

# System Monitoring
CPU_ALERT_THRESHOLD=90
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=80

# Request Timeouts
API_TIMEOUT=30
DATABASE_TIMEOUT=10
REDIS_TIMEOUT=5

# ==========================================
# Development Settings
# ==========================================

# Only for development environment
RELOAD_ON_CHANGE=true
API_DOCS_ENABLED=true
DEBUG_TOOLBAR=true

# Testing
TEST_DATABASE_URL="postgresql+asyncpg://test:test@localhost:5432/cryptouniverse_test"
TEST_REDIS_URL="redis://localhost:6379/1"

# ==========================================
# Production Settings
# ==========================================

# SSL/TLS
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Security Headers
SECURE_HEADERS=true
HSTS_MAX_AGE=31536000

# CDN & Static Files
STATIC_FILES_CDN=""
MEDIA_FILES_CDN=""

# ==========================================
# Feature Flags
# ==========================================

# Features that can be toggled
ENABLE_COPY_TRADING=true
ENABLE_FUTURES_TRADING=true
ENABLE_OPTIONS_TRADING=false
ENABLE_MARGIN_TRADING=true
ENABLE_AUTO_COMPOUND=true

# AI Features
ENABLE_AI_CONSENSUS=true
ENABLE_MARKET_SENTIMENT=true
ENABLE_TECHNICAL_ANALYSIS=true

# ==========================================
# Compliance & Legal
# ==========================================

# KYC/AML
KYC_VERIFICATION_REQUIRED=false
MAX_UNVERIFIED_DEPOSIT=1000.00

# Geographic Restrictions
RESTRICTED_COUNTRIES="US,CN,KP"  # Comma-separated country codes

# Data Retention
USER_DATA_RETENTION_DAYS=2555  # 7 years
TRADE_DATA_RETENTION_DAYS=2555  # 7 years
LOG_RETENTION_DAYS=90

# ==========================================
# Multi-tenant Configuration
# ==========================================

# White Label
ENABLE_WHITE_LABEL=true
DEFAULT_THEME="dark"
CUSTOM_BRANDING_ENABLED=true

# Tenant Limits
MAX_USERS_PER_TENANT=1000
MAX_API_KEYS_PER_USER=5
MAX_EXCHANGES_PER_USER=10

# ==========================================
# Backup & Recovery
# ==========================================

# Database Backups
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# File Storage
FILE_STORAGE_BACKEND="local"  # local, s3, gcs
S3_BUCKET=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""

# ==========================================
# Internationalization
# ==========================================

# Supported Languages
SUPPORTED_LANGUAGES="en,es,fr,de,ja,ko,zh"
DEFAULT_LANGUAGE="en"
DEFAULT_TIMEZONE="UTC"

# Currency Settings
DEFAULT_CURRENCY="USD"
SUPPORTED_CURRENCIES="USD,EUR,GBP,JPY,KRW,CNY"

# ==========================================
# Analytics & Metrics
# ==========================================

# Analytics Providers
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""
AMPLITUDE_API_KEY=""

# Performance Monitoring
DATADOG_API_KEY=""
NEW_RELIC_LICENSE_KEY=""

# ==========================================
# Development Tools
# ==========================================

# Code Quality
ENABLE_PROFILING=false
ENABLE_QUERY_LOGGING=false
ENABLE_SLOW_QUERY_LOG=true

# API Documentation
SWAGGER_UI_ENABLED=true
REDOC_ENABLED=true
OPENAPI_URL="/api/openapi.json"
